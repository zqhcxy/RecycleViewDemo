<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.github.zqhcxy.recycleviewdemo.activity.MainActivity">

    <Button
        android:id="@+id/nomal_Recyler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="简单的RecyclerView功能实现"/>

    <Button
        android:id="@+id/typs_Recyler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nomal_Recyler"
        android:text="简单的多类型的RecyclerView功能实现"/>

    <Button
        android:id="@+id/cursor_Recyler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/typs_Recyler"
        android:text="CursorAdapter的RecyclerView功能实现"/>

    <Button
        android:id="@+id/heads_Recyler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cursor_Recyler"
        android:text="带有头部布局的RecyclerView功能实现"/>

</RelativeLayout>
